{
    "[python]": {
        "diffEditor.codeLens": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.wordBasedSuggestions": "off",
        "files.autoSave": "onFocusChange",
        "files.trimFinalNewlines": true,
        "files.trimTrailingWhitespace": true
    },
    "black-formatter.args": [
        "--max-line-length",
        "120"
    ],
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/Thumbs.db": true,
        "*Zone.Identifier": true,
        ".ipynb_checkpoints": true
    },
    "github.copilot.editor.enableAutoCompletions": false,
    "github.copilot.editor.enableCodeActions": false,
    "github.copilot.enable": {
        "*": false // GitHub copilot usage is not allowed for this class. You may use the web version to ask questions, but auto-complete LLMs are prohibited. 
    },
    "notebook.defaultFormatter": "ms-python.black-formatter",
    "notebook.formatOnSave.enabled": true,
    "notebook.lineNumbers": "on",
    "pylint.args": [
        "--max-line-length",
        "120",
        "--disable",
        "missing-module-docstring"
    ],
    "pylint.enabled": true,
    "python.defaultInterpreterPath": "~/anaconda3/bin/python"
}